
@model Publisher
@{
    ViewData["Title"] = "Create";
}

<section class="container-fluid bg-info">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 jumbotron mt-4">
            <form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
                <div class="form-group row">
                    <label asp-for="Pub_id" class="col-sm-2 col-form-label">Publisher Id</label>
                    <div class="col-sm-10">
                        <input asp-for="Pub_id" class="form-control" placeholder="Pub_id" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Pub_name" class="col-sm-2 col-form-label">Publisher Name</label>
                    <div class="col-sm-10">
                        <input asp-for="Pub_name" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Phone" class="col-sm-2 col-form-label">Phone</label>
                    <div class="col-sm-10">
                        <input asp-for="Phone" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Address" class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Address" class="form-control" placeholder=""></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="City" class="col-sm-2 col-form-label">City</label>
                    <div class="col-sm-10">
                        <input asp-for="City" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="State" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <select asp-for="State" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<State>()"></select>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Country" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <select asp-for="Country" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Country>()"></select>
                    </div>
                </div>
            </form>
            <div class="text-center">
                <a asp-controller="Publisher" asp-action="Create" class="btn btn-success text-center">Add Publisher</a>
            </div>
        </div>
        <div class="col-md-3"></div>

    </div>
</section>




