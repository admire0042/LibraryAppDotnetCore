@model List<Publisher>


<h1 class="text-center h1">@ViewBag.Message</h1>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Publisher Id</th>
            <th scope="col">Publisher Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Country</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pub in Model)
        {
            <tr>
                <th scope="row"> @pub.Pub_id</th>
                <td>@pub.Pub_name</td>
                <td>@pub.Phone</td>
                <td>@pub.Address</td>
                <td>@pub.City</td>
                <td>@pub.State</td>
                <td>@pub.Country</td>
            </tr>
        }
    </tbody>
</table>


<a asp-controller="Publisher" asp-action="Create" class="btn btn-success">Add Publisher</a>