@model Author

<section class="container-fluid bg-info">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 jumbotron mt-4">
            <form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
                <div class="form-group row">
                    <label asp-for="Au_id" class="col-sm-2 col-form-label">Author Id</label>
                    <div class="col-sm-10">
                        <input asp-for="Au_id" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Au_name" class="col-sm-2 col-form-label">Author Name</label>
                    <div class="col-sm-10">
                        <input asp-for="Au_name" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Sex" class="col-sm-2 col-form-label">Sex</label>
                    <div class="col-sm-10">
                        <input asp-for="Sex" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Phone" class="col-sm-2 col-form-label">Phone</label>
                    <div class="col-sm-10">
                        <input asp-for="Phone" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Address" class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Address" class="form-control" placeholder=""></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="City" class="col-sm-2 col-form-label">City</label>
                    <div class="col-sm-10">
                        <input asp-for="Address" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Sex" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        @foreach (var sex in Model.AllSex)
                        {
                            <label class="radio-inline">
                                <input type="radio" asp-for="Sex" value="@sex" id="Sex@(sex)" />@sex
                            </label>
                        }
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="State" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <select asp-for="State" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<State>()"></select>
                    </div>
                </div>
            </form>
            <div class="text-center">
                <a asp-controller="Author" asp-action="Create" class="btn btn-success text-center">Add Author</a>
            </div>
        </div>
        <div class="col-md-3"></div>

    </div>
</section>






