@model List<Author>
@{
    ViewData["Title"] = "List";
}

<h1 class="text-center h1">@ViewBag.Message</h1>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Author Id</th>
            <th scope="col">Author Name</th>
            <th scope="col">Sex</th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <th scope="row"> @author.Au_id</th>
                <td>@author.Au_name</td>
                <td>@author.Sex</td>
                <td>@author.Phone</td>
                <td>@author.City</td>
                <td>@author.State</td>
                <td>@author.Address</td>
                <td>@author.City</td>
                <td>@author.State</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Author" asp-action="Create" class="btn btn-success">Add Author</a>