
@model Book
@{
    ViewData["Title"] = "Create";
}
<section class="container-fluid bg-info">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 jumbotron mt-4">
            <form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
                <div class="form-group row">
                    <label asp-for=" Book_id " class="col-sm-2 col-form-label"> Book Id </label>
                    <div class="col-sm-10">
                        <input asp-for=" Book_id " class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Book_name" class="col-sm-2 col-form-label">Book Name</label>
                    <div class="col-sm-10">
                        <input asp-for="Book_name" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                    <div class="col-sm-10">
                        <input asp-for="Price" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Au_id" class="col-sm-2 col-form-label">Author Id</label>
                    <div class="col-sm-10">
                        <input asp-for="Au_id" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Pub_id" class="col-sm-2 col-form-label">Publisher Id</label>
                    <div class="col-sm-10">
                        <input asp-for="Pub_id" class="form-control" placeholder="" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Dt_of_Publish" class="col-sm-2 col-form-label">Date of Publish</label>
                    <div class="col-sm-10">
                        <input asp-for="Dt_of_Publish" class="form-control" placeholder="" />
                    </div>
                </div>
            </form>
            <div class="text-center">
                <a asp-controller="Book" asp-action="Create" class="btn btn-success text-center">Add Book</a>
            </div>
        </div>
        <div class="col-md-3"></div>

    </div>
</section>

